#include "libft.h"

char	*ft_itoa(int n)
{
	long int		nbr;
	size_t			i;
	size_t			n_len;
	char			*r;
	unsigned char	minus;

	nbr = n;
	n_len = 0;
	minus = 0;
	if (n < 0)
	{
		minus = 1;
		nbr *= -1;
	}
	while (n > 0)
	{
		n_len++;
		n /= 10;
	}
	r = (char *) ft_calloc(n_len + minus + 1, 1);
	if (minus)
		r[0] = '-';
	i = n_len - 1;
	while (i >= minus)
	{
		r[i + minus] = nbr % 10;
		nbr /= 10;
		i--;
	}
	return (r);
}

#include <stdio.h>
int	main(int ac, char **av)
{
	if (ac == 2)
	{
		int nb = atoi(av[1]);
		char *result = ft_itoa(nb);
		printf("ft_itoa : %s\n", result);
		free(result);
	}
	return (0);
}
